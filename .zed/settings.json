{
  "auto_update": true,
  "inline_code_actions": false,
  "extend_comment_on_newline": false,
  "bottom_dock_layout": "left_aligned",
  "unstable.ui_density": "compact",
  "use_system_prompts": false,
  "hide_mouse": "on_typing_and_movement",
  "go_to_definition_fallback": "none",
  "cursor_shape": "block",
  "cursor_blink": false,
  "multi_cursor_modifier": "alt",
  "use_smartcase_search": true,
  "lsp_highlight_debounce": 250,
  "hover_popover_delay": 500,
  "base_keymap": "None",
  "restore_on_startup": "last_session",
  "preview_tabs": {
    "enabled": false
  },
  "minimap": {
    "show": "never"
  },
  "search": {
    "button": false
  },
  "project_panel": {
    "default_width": 480,
    "dock": "right",
    "file_icons": false,
    "folder_icons": false,
    "indent_size": 10,
    "entry_spacing": "standard",
    "button": false,
    "sticky_scroll": false
  },
  "file_finder": {
    "skip_focus_for_active_in_search": false,
    "modal_max_width": "large"
  },
  "theme": "Gruvbox Dark Hard",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": false
    }
  },
  "vim_mode": false,
  "ui_font_size": 15,
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "buffer_font_size": 14,
  "buffer_line_height": "comfortable",
  "buffer_font_family": "LigaPragmataProMonoNerdFontPropo",
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "tabs": {
    "show_diagnostics": "errors",
    "file_icons": false,
    "git_status": true,
    "activate_on_close": null,
    "show_close_button": "hidden"
  },
  "collaboration_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "terminal": {
    "button": false,
    "font_size": 13,
    "line_height": "standard",
    "font_family": "LigaPragmataProMonoNerdFontPropo",
    "cursor_shape": "block",
    "option_as_meta": true
  },
  "notification_panel": {
    "button": false
  },
  "confirm_quit": true,
  "remove_trailing_whitespace_on_save": true,
  "when_closing_with_no_tabs": "keep_window_open",
  "gutter": {
    "min_line_number_digits": 5,
    "line_numbers": true,
    "runnables": false,
    "folds": false,
    "breakpoints": false
  },
  "soft_wrap": "preferred_line_length",
  "preferred_line_length": 125,
  "wrap_guides": [136],
  "git": {
    "hunk_style": "staged_hollow",
    "gutter_debounce": 500,
    "inline_blame": {
      "enabled": false,
      "show_commit_summary": true
    }
  },
  "debugger": {
    "button": false
  },
  "git_panel": {
    "button": false
  },
  "title_bar": {
    "show_branch_icon": false,
    "show_user_picture": false,
    "show_branch_name": false
  },
  "scrollbar": {
    "show": "always",
    "cursors": false
  },
  "scroll_sensitivity": 2,
  "formatter": "auto",

  // Languages & LSPs - Start
  "languages": {
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "Python": {
      "format_on_save": "on",
      "language_servers": ["pyright", "ruff"],
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "configuration": "ruff.toml"
        }
      }
    },
    "pyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    },
    "vtsls": {
      "settings": {
        // "javascript": {
        //   "suggestionActions": {
        //     "enabled": false
        //   },
        //   "validate": {
        //     "enable": false
        //   },
        //   "inlayHints": {
        //     "parameterNames": {
        //       "enabled": false
        //     },
        //     "parameterTypes": {
        //       "enabled": false
        //     },
        //     "variableTypes": {
        //       "enabled": false
        //     },
        //     "propertyDeclarationTypes": {
        //       "enabled": false
        //     },
        //     "functionLikeReturnTypes": {
        //       "enabled": false
        //     },
        //     "enumMemberValues": {
        //       "enabled": false
        //     }
        //   }
        // },
        // "javascriptreact": {
        //   "suggestionActions": {
        //     "enabled": false
        //   },
        //   "validate": {
        //     "enable": false
        //   },
        //   "inlayHints": {
        //     "parameterNames": {
        //       "enabled": false
        //     },
        //     "parameterTypes": {
        //       "enabled": false
        //     },
        //     "variableTypes": {
        //       "enabled": false
        //     },
        //     "propertyDeclarationTypes": {
        //       "enabled": false
        //     },
        //     "functionLikeReturnTypes": {
        //       "enabled": false
        //     },
        //     "enumMemberValues": {
        //       "enabled": false
        //     }
        //   }
        // },
        "typescript": {
          "inlayHints": {
            "parameterNames": {
              "enabled": "all",
              "suppressWhenArgumentMatchesName": false
            },
            "parameterTypes": {
              "enabled": true
            },
            "variableTypes": {
              "enabled": true,
              "suppressWhenTypeMatchesName": true
            },
            "propertyDeclarationTypes": {
              "enabled": true
            },
            "functionLikeReturnTypes": {
              "enabled": true
            },
            "enumMemberValues": {
              "enabled": true
            }
          }
        }
      }
    }
  },
  // Languages & LSPs - End

  "experimental.theme_overrides": {
    "hint": "#737c7c",
    "predictive": "#737c7c",
    "players": [{ "cursor": "#dbd2a7" }]
  },

  // AI Stuff - Start
  "features": {
    "edit_prediction_provider": "none"
  },
  "agent": {
    "enabled": false,
    "button": false
  },
  "inlay_hints": {
    "enabled": false
  },
  "show_edit_predictions": false
  // AI Stuff - End
}
